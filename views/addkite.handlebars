<div class="page-header">
<h3>Add a new kite to the database</h3>
</div>
<div class="contactUs">
<h4>Please enter the kite details below</h4>
<form class="formContactUs" role="form"  enctype="multipart/form-data" action="/addkite?form=addkite" method="POST">

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <!--  brand div group -->
  <div class="form-group">
    <label for="brand" class="col-sm-2 control-label">Brand</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="brand"
      name="brand">
    </div>
  </div>

    <!-- End of form-group -->
        <select class="selectpicker" data-style="btn-info" name="primarycolor">
            <optgroup label="Select Table">
                <option name="" value="0">Primary Color</option>
                <option value="White">White</option>
                <option value="Yellow">Yellow</option>
                <option value="Orange">Orange</option>
                <option value="Red">Red</option>
                <option value="Pink">Pink</option>
                <option value="Green">Green</option>
                <option value="Bright Blue">Bright Blue</option>
                <option value="Blue">Blue</option>
                <option value="Purple">Purple</option>
                <option value="Black">Black</option>
            </optgroup>
        </select>

    <select class="selectpicker" data-style="btn-info" name="secondarycolor">
        <optgroup label="Select Table">
            <option name="" value="0">Secondary Color</option>
            <option value="White">White</option>
            <option value="Yellow">Yellow</option>
            <option value="Orange">Orange</option>
            <option value="Red">Red</option>
            <option value="Pink">Pink</option>
            <option value="Green">Green</option>
            <option value="Bright Blue">Bright Blue</option>
            <option value="Blue">Blue</option>
            <option value="Purple">Purple</option>
            <option value="Black">Black</option>
        </optgroup>
    </select>

    <!--  model div group -->
  <div class="form-group">
    <label for="model" class="col-sm-2 control-label">
    Model Kite</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="model"
      name="model">
    </div>
  </div>
    <!-- End of form-group -->


    <!--  size div group -->
    <div class="form-group">
        <label for="size" class="col-sm-2 control-label">
            Kite size</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="size"
                   name="size">
        </div>
    </div>
    <!-- End of form-group -->

    <!--  file uploading -->

    <div class="form-group">
        <label for="fieldPhoto" class="col-sm-2 control-label">
           Kite Image</label>
        <div class="col-sm-4">
            <!-- Only accept images -->
            <input type="file" class="form-control" required accept="image/*" id="fieldPhoto" name="photo">
        </div>
    </div>
    <!-- End of file upload-group -->

  <div class="form-group">
    <div class="col-sm-4">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
    <!-- End of form-group -->
</form>

</div> <!-- End of contactUs -->
