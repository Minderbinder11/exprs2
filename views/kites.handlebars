<div>List of Kites</div>
<div>
    <h2>Here is the list of Kites in the Database</h2>

    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Kites</div>

        <!-- Table -->
        <table class="table">
            <tr>
                <th>#</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Colors</th>
                <th>Size</th>
                <th>Picture</th>
            </tr>
            {{#each kitelist}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{brand}}</td>
                    <td>{{model}}</td>
                    <td>
                        <div class="circle" style="background-color: {{color}}"></div>
                        <div class="circle" style="background-color: {{secondary-color}}"></div>
                    </td>
                    <td>{{size}}</td>
                    <td>
                        <img src="{{path}}"/>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>

</div>