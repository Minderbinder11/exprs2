<div class="page-header">
<h3>Add a company</h3>
</div>
<div class="contactUs">
<h4>Enter your latest target</h4>
<form class="formContactUs" role="form"
  action="/process?form=contactus" method="POST">

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <!--  company name div group -->
  <div class="form-group">
    <label for="companyName" class="col-sm-2 control-label"> Company Name</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="companyName"
      name="companyName">
    </div>
  </div>
    <!-- End of form-group -->

    <!--  company website div group -->
  <div class="form-group">
    <label for="companyWebsite" class="col-sm-2 control-label">
    Company Website</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="companyWebsite"
      name="companyWebsite">
    </div>
  </div>
    <!-- End of form-group -->

    <!--  linkedin div group -->
    <div class="form-group">
        <label for="companyCityState" class="col-sm-2 control-label">
            Company Linkedin</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="companyCityState"
                   name="companyCityState">
        </div>
    </div>
    <!-- End of form-group -->

    <!--  linkedin div group -->
    <div class="form-group">
        <label for="companyLinkedin" class="col-sm-2 control-label">
            Company Linkedin</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="companyLinkedin"
                   name="companyLinkedin">
        </div>
    </div>
    <!-- End of form-group -->

  <div class="form-group">
    <div class="col-sm-4">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div> <!-- End of form-group -->

</form>

</div> <!-- End of contactUs -->
